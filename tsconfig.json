{
  "compilerOptions": {
    "lib": ["es7", "es2016"],
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": ["./tests"]
}